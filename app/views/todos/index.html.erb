<h1>Todo List</h1>

<%= link_to 'New Todo', new_todo_path %>

<ul>
  <% @todos.each do |todo| %>
  <li>
    <%= todo.title %>
    <%= link_to 'Edit', edit_todo_path(todo) %>
    <% link_to 'Destroy', todo_path(todo), method: :delete,
    data: { confirm: 'Are you sure? '} %>
  </li>
  <% end %>
</ul>
